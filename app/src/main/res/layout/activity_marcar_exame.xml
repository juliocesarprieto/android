<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarcarExame">

    <Spinner
        android:id="@+id/spinnerExNome"
        android:layout_width="353dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


    <EditText
        android:id="@+id/txtObs"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Observações"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerExHosp"
        android:layout_width="353dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp" />

    <Spinner
        android:id="@+id/spinnerExCli"
        android:layout_width="354dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp" />

    <Spinner
        android:id="@+id/spinnerExMed"
        android:layout_width="354dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="209dp" />

    <Spinner
        android:id="@+id/spinnerExData"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp" />

    <Spinner
        android:id="@+id/spinnerExHora"
        android:layout_width="354dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp" />

    <Button
        android:id="@+id/bntMarcarExame"
        android:layout_width="340dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="26dp"
        android:onClick=""
        android:text="Marcar Exame" />

</RelativeLayout>